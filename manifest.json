{
  "name": "Gawker Blocker",
  "description": "Filter out authors on Gawker homepage",
  "version": "2.0",
  "permissions": [
    "activeTab","storage","tabs"
  ],
  "background": {
    "scripts": ["jquery.js","background.js"],
    "persistent": false
  },
  "icons": {
      "128": "gawker.png"
   },
  "browser_action": {
    "default_title": "Gawker Blocker",
    "default_icon": "gawker.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
   "content_scripts": [
    {
      "js": ["jquery.js","content.js"],
      "matches": [ "http://gawker.com/*"]
    }
  ]
}
